    <view>  
      <text style="color: red" >|</text>
      <text>最新上线菜谱</text>
    </view>  
      <text @tap ="list" class="end" style="color: red">更多>></text>
  </view>

  <view class="find product">
        <view  @tap = "display" class="recommend " wx:for="{{content}}" wx:key="index" id="{{index}}">
          <image class="recPhoto" src="{{item.recPhoto}}" mode="scaleToFill" />
        <view class="product">  
          <text class="recName">{{item.recName}}</text>
        </view>  
        </view>
  </view>

    <view class="bottom row">
      <text>唯爱与</text> 
      <text style="color:red">美食</text>
      <text>不可辜负</text>
    </view>
</view>  
</template>

<script>
import wepy from 'wepy'
import name from '../util/name.js'
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '爱心套餐',
    enablePullDownRefresh: 'true'
  }
  data = {
    src: '',
    imgUrls: [
      'http://mpic.tiankong.com/7fc/beb/7fcbebebe7903a0e6c865ef9aecc9740/640.jpg@300h',
      'http://mpic.tiankong.com/209/66a/20966a26fff3f79004e3d262055517b0/640.jpg@300h',
      'http://mpic.tiankong.com/1b9/4bc/1b94bc58139d264ad0c6d401b90eca7f/640.jpg@300h',
      'http://mpic.tiankong.com/66e/4aa/66e4aaf334f8f37f0dbc59acff7bf683/430-3831.jpg@300h'
    ],
    describe: '',
    content: null,
    indicatorDots: true,
    color: 'white',
    color1: 'red',
    height: 0,
    width: 0,
    search: '../image/check.png',
    king: '../image/king.png',
    eat: '../image/eat.png',
    hot: '../image/hot.png',
    time: '../image/time.png'
  }
  methods = {
    list() {
      wepy.navigateTo({
        url: '../pages/list'
      })
    },
    display(e) {
      let self = this
      let item = self.content[e.currentTarget.id]
      console.log(item)
      wepy.navigateTo({
        url: `./display?recPhoto=${item.recPhoto}&recName=${item.recName}`
      })
    }
  }
  onLoad() {
    let self = this
    self.content = name
    wepy.getSystemInfo({
      success(res) {
        self.height = res.windowHeight
        self.width = res.windowWidth
      }
    })
  }
}
</script>
