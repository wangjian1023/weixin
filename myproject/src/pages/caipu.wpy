<template>
<view>
  <view class="background">
    <view class="section">
      <input placeholder="想吃什么菜啦？" focus="{{focus}}" config-type="search" class="input" />
      <image class="photo" src="{{search}}"></image>
    </view>
  </view>

  <view class="row" >
    <text style="color: red" >|</text>
    <text>今日推荐</text>
  </view>
  <view class='swiper' >
      <swiper class='slide-image' autoplay='true' indicator-dots="{{indicatorDots}}" indicator-color = "{{color}}" indicator-active-color = "{{color1}}" interval='3000' duration='1000' circular='true' current='{{}}'>
        <block wx:for='{{imgUrls}}' wx:key='index'>
          <swiper-item>
            <image class='slide-image' src='{{item}}' />
          </swiper-item>
        </block>
      </swiper>
  </view>

  <view class="border">
      <view class="column six" style="background-color:#b8b10e">
        <image class="photo" src="{{time}}" />
        <text>最新菜谱</text>
      </view>
      <view class="column six" style="background-color:#FF9933">
        <image class="photo" src="{{hot}}" />
        <text>最热菜谱</text>
      </view>
  </view>
  <view class="border">
      <view class="column six" style="background-color:#99FF99">
        <image class="photo" src="{{king}}" />
        <text>推荐菜谱</text>
      </view>
      <view class="column six" style="background-color:#99FFFF">
        <image class="photo" src="{{eat}}" />
        <text>家常菜谱</text>
