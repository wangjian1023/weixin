
.section {
  display: flex;
  width: 90%;
  justify-content: center;
  align-items: center;
  border: 1px solid gray;
  background-color: white;
  height: 30px;
  font-size: 15px;
  justify-content: space-between;
}

.photo {
  display: flex;
  height: 25px;
  width: 25px;
  align-content: center;
  padding: 5px;
}
.background {
  display: flex;
  width: 100%;
  height: 50px;
  align-items: center;
  justify-content: center;
}

.picture {
  height: 230px;
  width: 95%;
  margin: 10px;
}
.text {
  display: flex;
  border-bottom: 1px solid gray;
  height: 40px;
  flex-direction: column;
  font-size: 15px;
  justify-content: center;
  align-items: center;
}

.sweetheart {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:20px;
  margin-top:15px;
}
