
.photo {
  display: flex;
  align-content: center;
  justify-content: center;
  height: 100px;
  width: 100px;
}

.section {
  display: flex;
  align-content: center;
  border: 0.5px solid #d0cece;
  border-radius: 7px;
  background-color: white;
  justify-content: center;
  height: 65rpx;
}

.slide-image {
  width: 100%;
  height: 13rem;
  box-shadow: 0px -40px 20px #7a7171 inset;
}

.background {
  background-color: #eee;
  padding: 7px;
}

.search {
  height: 20px;
  width: 20px;
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top: 1px;
}

.show {
  margin: 40rpx 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.popularity {
  color: #918d8d;
  margin-top: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30px;
  height: 80rpx;
}

.recommend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.prais {
  display: flex;
  flex-direction: row;
  font-size: 15px;
}

.praise {
  height: 15px;
  width: 15px;
}

.recPhoto {
  border-radius: 10px;
  width: 9rem;
}

.recName {
  font-size: 20px;
  width: 9rem;
}

.swiper {}

.production {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.top {
  height: 40rpx;
  background-color: #fff;
  border-top-right-radius: 100%;
  border-top-left-radius: 100%;
  position: relative;
  top: 12.2rem;
  box-shadow: 0px -20px 30px 10px rgba(0, 0, 0, 0.7) ;
  margin-top: 3px;
}

