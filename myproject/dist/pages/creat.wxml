
  <view>
    <view class="border">
      <view style="display:flex; align-items: center; justify-content: center;height:100px; flex-direction: column;">
        <image class="photo" src="{{add}}"/>
        <text class="text">点击上传封面图</text>
      </view>
    </view>
    <view class="wonder">
      <input placeholder="菜谱标题.." maxlength="20" class="input"/>
    </view>

    <view class="wonder" style="display:flex;">
      <text>难度</text>
      <view class="section" style="color:red">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="picker">
            必选：{{array[index]}}
            </view>
        </picker>
      </view>
    </view>

    <view class="wonder" style="display:flex;">
      <text>时间</text>
      <view class="section" style="color:red">
          <picker bindchange="bindMultiPickerChange" value="{{time}}" range="{{arr}}">
            <view class="picker">
            必选：{{arr[index1]}}
            </view>
        </picker>
      </view>
    </view>

    <view class="disk">
      <image class="leder" src="{{yes}}"/>
      <text>菜谱分类</text>
    </view>

    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio"  wx:for="{{items}}">
        <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
      </label>
    </radio-group>

    <view class="disk">
      <image class="leder" src="{{yes}}"/>
      <text>食材用料明细</text>
    </view>

    <view class="row">
      <view>
        <block  wx:for="{{lists}}" wx:key="index" style="display: flex; flex-direction: column">  
          <input class="create-li line" data-id="{{index}}" placeholder="材料名，如牛肉" bindinput="bindKeyInput"/>   
        </block>
      </view>
      <view>
        <block wx:for="{{lists}}" wx:key="index" style="display: flex; flex-direction: column">  
          <input class="create-li line" data-id="{{index}}" placeholder="数量 如100g" bindinput="bindKeyInput"/>   
        </block>
      </view>
    </view>
    <view class="row">
    <button style="display: flex; justify-content: center; align-items: center;" class="add-li" bindtap="addList">添加食材</button>  
    <button style="display: flex; justify-content: center; align-items: center;" class="add-li" bindtap="delList">减少食材</button> 
    </view>

    <view class="disk">
      <image class="leder" src="{{yes}}"/>
      <text>步骤</text>
    </view>

    <!-- <view wx:for="{{items}}" wx:for-item="name" wx:for-index="id">
      {{id}}: {{name.one}}
    </view> -->
    <view>
        <block wx:for="{{lists1}}" wx:key="index" style="display: flex; flex-direction: column">  
          <input class="create-li line" data-id="{{index}}" placeholder="材料名，如牛肉" bindinput="bindKeyInput"/>   
        </block>
    </view>

    <view class="row">
    <button style="display: flex; justify-content: center; align-items: center;" class="add-li" bindtap="addList1">添加步骤</button>  
    <button style="display: flex; justify-content: center; align-items: center;" class="add-li" bindtap="delList1">减少步骤</button> 
    </view>

  </view>